{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run (C++)",
            "type": "shell",
            // Default command (Linux/macOS); overridden in osx/windows below
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out",
                "&&",
                "[",
                "-f",
                "input.txt",
                "]",
                "&&",
                "${fileDirname}/a.out",
                "<",
                "input.txt",
                ">",
                "output.txt",
                "||",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "osx": {
                "command": "/opt/homebrew/bin/g++-15",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/a.out",
                    "&&",
                    "[",
                    "-f",
                    "input.txt",
                    "]",
                    "&&",
                    "${fileDirname}/a.out",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt",
                    "||",
                    "${fileDirname}/a.out"
                ],
                "options": {
                    "cwd": "${fileDirname}",
                    "shell": {
                        "executable": "/bin/zsh",
                        "args": ["-l", "-c"]
                    }
                }
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}\\a.exe",
                    "&&",
                    "if",
                    "exist",
                    "input.txt",
                    "(",
                    "${fileDirname}\\a.exe",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt",
                    ")",
                    "else",
                    "(",
                    "${fileDirname}\\a.exe",
                    ")"
                ],
                "options": {
                    "cwd": "${fileDirname}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run the active C++ file; if input.txt exists next to it, redirect input and save output.txt."
        }
    ]
}
